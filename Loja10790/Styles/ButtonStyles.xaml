<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Button" x:Key="SideMenuButton">
        <Setter Property="Width" Value="200"/>
        <Setter Property="Height" Value="60"/>
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="#1B4571"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="Rubik Medium"/>
        <Setter Property="Margin" Value="0,10,0,0"/>
    </Style>

    <Style TargetType="Button" x:Key="PageMenuButton">
        <Setter Property="Width" Value="250"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Background" Value="#1B4571"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="Rubik Medium"/>
    </Style>
</ResourceDictionary>