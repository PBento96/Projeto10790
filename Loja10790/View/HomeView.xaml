<Window x:Class="Loja10790.View.HomeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Loja10790.View"
        xmlns:User_Controls="clr-namespace:Loja10790.View.User_Controls"
        xmlns:UserControls="clr-namespace:Loja10790.View.UserControls"
        mc:Ignorable="d"
        Title="HomeView" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown"
        MinWidth="800"
        MinHeight="720">

    <Border Background="#1B4571"
            BorderBrush="Black"
            BorderThickness="2">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="THE STORE | ⌂ Home"
                           Foreground="White"
                           FontSize="10"
                           FontFamily="Rubik Medium"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>

                <Button x:Name="btnMinimize"
                        Background="White"
                        BorderThickness="0"
                        Content="-"
                        Foreground="#1B4571"
                        FontSize="16"
                        FontFamily="Rubik Medium"
                        Cursor="Hand"
                        Grid.Column="1"
                        Click="btnMinimize_Click"/>

                <Button x:Name="btnMaximize"
                        Background="#45711b"
                        BorderThickness="0"
                        Content="□"
                        Foreground="White"
                        FontSize="16"
                        FontFamily="Rubik Medium"
                        Cursor="Hand"
                        Grid.Column="2"
                        Click="btnMaximize_Click"/>

                <Button x:Name="btnClose"
                        Background="#711b45"
                        BorderThickness="0"
                        Content="X"
                        Foreground="White"
                        FontSize="16"
                        FontFamily="Rubik Medium"
                        Cursor="Hand"
                        Grid.Column="3"
                        Click="btnClose_Click"/>

            </Grid>

            <Grid Grid.Row="1">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Expander Grid.Column="0"
                          Margin="5,5,5,5"
                          ExpandDirection="Right"
                          IsExpanded="True"
                          x:Name="sideMenu">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">

                    <StackPanel VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Width="200" Margin="0,0,20,0">

                        <Button Style="{StaticResource SideMenuButton}"
                                Content="🛒 Sales"
                                Click="btnSales_Click"/>
                        <Button Style="{StaticResource SideMenuButton}"
                                Content="🗠 Stores"
                                Click="btnStores_Click"/>
                        <Button Style="{StaticResource SideMenuButton}"
                                Content="👥 Accounts"
                                Click="btnAccounts_Click"/>
                        <Button Style="{StaticResource SideMenuButton}"
                                Content="👤 My Account"
                                Click="btnMyAccount_Click"/>

                        </StackPanel>

                    </ScrollViewer>
                </Expander>

                <Grid Grid.Column="1">
                    
                    <Grid.Background>
                        <SolidColorBrush Color="#2a6baf"/>
                    </Grid.Background>

                    <Grid Grid.Column="1">

                        <Grid.Background>
                            <SolidColorBrush Color="#2a6baf"/>
                        </Grid.Background>

                        <Image Source="\Images\backgroundLogoWhiteTransparent.png" Stretch="Uniform"/>
                        
                        <Frame x:Name="contentFrame" NavigationUIVisibility="Hidden" />
                    </Grid>
                </Grid>

            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Projeto 10790 - 2023 Pedro Bento"
                           TextAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="White"
                           FontFamily="Rubik Medium"
                           Grid.Column="0"
                           FontSize="10"/>

                <Button x:Name="btnLogout"
                        Background="#711b45"
                        BorderThickness="0"
                        Content="LOGOUT"
                        Foreground="White"
                        FontSize="16"
                        FontFamily="Rubik Medium"
                        Cursor="Hand"
                        Grid.Column="1"
                        Click="btnLogout_Click"/>

            </Grid>

        </Grid>
    </Border>
</Window>
